h1= title
p Welcome to #{title}

form(method='post', action='/')
    div
        label Grove.io Webhook:
            input(name='groveio', value=groveio)
    
    div
        label Feed:
            input(name='feed', value=feed)
    
    - if (groveio!== "" && feed !== "")
        div
            input(type='hidden', name='mode', value='unsubscribe')
            input(type='submit', value='Stop Following')
    - else
        div
            input(type='hidden', name='mode', value='subscribe')
            input(type='submit', value='Start Following')
    
